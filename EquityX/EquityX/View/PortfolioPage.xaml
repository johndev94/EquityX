<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="EquityX.View.PortfolioPage"
             Title="PortfolioPage">
    <VerticalStackLayout>
    <Grid
     RowDefinitions="*,*,*,*"
     ColumnDefinitions="*,*,*">
            <BoxView  
       
              Grid.Row="0" 
              Grid.Column="0" 
              Grid.ColumnSpan="3" 
              Margin="5,10,5,0">

                <BoxView.Background CornerRadius="20,20,20,20">
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#421865"
                   Offset="0.1" />
                        <GradientStop Color="#425865"
                   Offset="0.8" />
                    </LinearGradientBrush>
                </BoxView.Background>
            
        </BoxView>
        <Label Text="Your Investments" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" FontSize="30" HorizontalTextAlignment="Center" Margin="0, 20, 0, 0" TextColor="White"/>


        <BoxView CornerRadius="20,20,20,20" 
                  Color="#425869" 
                  Grid.Row="1" 
                  Grid.Column="0" 
                  Grid.ColumnSpan="4" 
                  Margin="5,10,5,0"
                  />
        <BoxView CornerRadius="20,20,20,20" 
                  Color="#425869" 
                  Grid.Row="2" 
                  Grid.Column="0" 
                  Grid.ColumnSpan="4" 
                  Margin="5,10,5,0"
                  />
        <BoxView CornerRadius="20,20,20,20" 
                  Color="#425869" 
                  Grid.Row="1" 
                  Grid.Column="0" 
                  Grid.ColumnSpan="4" 
                  Margin="5,10,5,0"
                  />

        </Grid>
        <micro:ChartView x:Name="chartView" HeightRequest="200"/>
        </VerticalStackLayout>

</ContentPage>