<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:EquityX.Model"
             xmlns:pages="clr-namespace:EquityX.View"
             xmlns:service="clr-namespace:EquityX.Services"
             xmlns:viewmodel="clr-namespace:EquityX.ViewModel"

             Title="Home"
             x:Class="EquityX.MainPage">
    <ScrollView>
        <Grid ColumnDefinitions="*,*"
              ColumnSpacing="5"
              RowDefinitions="*,Auto"
              RowSpacing="0"
              Margin="0, 30, 0, 0 ">


            <CollectionView ItemsSource="{Binding Stocks}" 
                            Grid.ColumnSpan="2"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Stock">
                        <Grid Padding="10" Margin="0, 20, 0, 0">
                            <Frame CornerRadius="5"
                                   HeightRequest="125"
                                   Padding="0"
                                   BackgroundColor="#425865"
                                   HasShadow="True">
                                <Grid ColumnDefinitions="130, 130, *"
                                      RowDefinitions="*,*,*"
                                      Padding="0">
                                    <Label Text="{Binding Company}"
                                           Grid.Row="0"
                                           Grid.Column="0"
                                           TextColor="White"
                                           VerticalTextAlignment="Center"/>
                                    <Label Text="{Binding Price, StringFormat='{0:C}'}"
                                           Grid.Row="1"
                                           Grid.Column="0"
                                           TextColor="White"
                                           VerticalTextAlignment="Center"/>
                                    <Label Text="{Binding Symbol}"
                                           Grid.Row="2"
                                           Grid.Column="0"
                                           TextColor="White"
                                           VerticalTextAlignment="Center"/>

                                    <!-- Buy and Sell buttons -->
                                    <Button Text="Buy" 
                                            BackgroundColor="Orange" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=BuyCommand}"
                                            CommandParameter="{Binding }"
                                            Grid.Row="0" 
                                            Grid.Column="2" 
                                            WidthRequest="100" 
                                            Margin="0,5,25,0"/>
                                    <Button Text="Sell" 
                                            BackgroundColor="Purple" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=SellCommand}"
                                            CommandParameter="{Binding }"
                                            Grid.Row="1" 
                                            Grid.Column="2" 
                                            WidthRequest="100" 
                                            Margin="0,5,25,0"/>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ScrollView>
</ContentPage>
