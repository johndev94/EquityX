<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:EquityX.Model"
             xmlns:pages="clr-namespace:EquityX.View"
             xmlns:service="clr-namespace:EquityX.Services"
             xmlns:viewmodel="clr-namespace:EquityX.ViewModel"
             x:Class="EquityX.View.BuyStockPage"
             Title="{Binding Stock.longName}">

    <ContentPage.BindingContext>
        <viewmodel:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <!-- Stock Details -->
            <Label Text="{Binding Stock.shortName}" />
            <Label Text="{Binding Stock.regularMarketPrice, StringFormat='Price: {0:C}'}" />
            <!-- Add more details as needed -->

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
